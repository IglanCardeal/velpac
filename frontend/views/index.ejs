    <!-- Arquivos para download -->
    <%- include('./partials/baixar.ejs') %>

    <br />

    <!-- ***********************  Equipe de desenvolvimento  *****************-->
    <%- include('./partials/equipe.ejs') %>

    <!--************ Contatos **********-->
    <%- include('./partials/contatos.ejs') %>

