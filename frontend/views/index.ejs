<!DOCTYPE html>
<html lang="pt-Br">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta
      name="description"
      content="Sistema de gerenciamento de tempo de semáforos de trânsito."
    />
    <meta name="author" content="Iglan Monteiro de Miranda Cardeal" />
    <meta name="keyword" content="Arduino, NodeJS, Javascript, Bootstrap" />

    <link
      rel="shortcut icon"
      href="img/favicon.png"
      id="velpac"
      type="image/x-icon"
    />

    <link
      href="https://fonts.googleapis.com/css?family=Signika:400,600&display=swap"
      rel="stylesheet"
    />

    <title>VELPAC</title>

    <!-- Theme CSS - Includes Bootstrap -->
    <link href="css/creative.min.css" rel="stylesheet" />

    <style>
      /* HOME.CSS incluido diretamente aqui */
      p {
        letter-spacing: 0.05em;
      }

      .main__page--title {
        color: #fff;
        text-shadow: none;
        font-weight: 600;
        animation: changeColor 12s infinite 3s;
        /* transition: all 3s; */
        font-size: 8vw;
      }

      .company-logo {
        border-radius: 50%;
        animation: changeLogoColor 12s infinite 3s;
        transition: all 3s;
        z-index: 1;
      }

      #portfolio img {
        width: 100%;
      }

      .social-icons {
        margin: 15px;
        text-decoration: none;
        width: 32px;
        height: auto;
      }

      .img-fluid,
      .simulacao-video {
        box-shadow: 0 10px 10px rgba(15, 100, 48, 0.7);
      }

      .simulacao-video {
        border-bottom: 5px solid rgb(15, 100, 48);
      }

      .company-logo {
        box-shadow: none;
      }

      @keyframes changeColor {
        25% {
          text-shadow: 0 5px 10px green;
        }
        50% {
          text-shadow: 0 5px 10px yellow;
        }
        75% {
          text-shadow: 0 5px 10px red;
        }
        100% {
          text-shadow: none;
        }
      }

      @keyframes changeLogoColor {
        25% {
          background-color: rgba(52, 128, 33, 0.2);
        }
        50% {
          background-color: rgba(231, 255, 13, 0.2);
        }
        75% {
          background-color: rgba(235, 55, 5, 0.2);
        }
        100% {
          background-color: none;
        }
      }
    </style>
  </head>

  <body data-spy="scroll" data-target="#mainNav" id="page-top">
    <!-- MENU DE NAVEGACAO -->
    <%- include('./partials/nav.ejs') %>

    <!-- header principal -->
    <header class="masthead">
      <div class="container h-100">
        <div
          class="row h-100 align-items-center justify-content-center text-center"
        >
          <div class="col-lg-10 align-self-end" id="inicio">
            <img
              class="company-logo img-fluid"
              src="img/V.png"
              alt="company-logo"
            />
            <h1 class="main__page--title">
              VELPAC
              <!-- <span style="font-size: 1.5rem; text-shadow: 0 3px 5px black;"
                >&#8482;</span
              > -->
            </h1>
          </div>
          <div class="col-lg-10 align-self-baseline">
            <p class="text-white-75 mb-5">
              Soluções para tráfego urbano de pedestres e veículos.
            </p>
            <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about"
              >SAIBA MAIS</a
            >
          </div>
        </div>
      </div>
    </header>

    <!-- About Section -->
    <%- include('./partials/sobre.ejs') %>

    <!-- ************* Problema e Solucao Velpac -->
    <%- include('./partials/problema-solucao.ejs') %>

    <!-- ***************** funcionamento do projeto ***************** -->
    <%- include('./partials/funcionamento.ejs') %>

    <!-- ************** servicos ******************* -->
    <%- include('./partials/servicos.ejs') %>

    <!-- ***************** IMGs projeto ************************** -->
    <%- include('./partials/img-projeto.ejs') %>

    <!-- Arquivos para download -->
    <%- include('./partials/baixar.ejs') %>

    <br />

    <!-- ***********************  Equipe de desenvolvimento  *****************-->
    <%- include('./partials/equipe.ejs') %>

    <!--************ Contatos **********-->
    <%- include('./partials/contatos.ejs') %>

    <!-- ********* rodape *********** -->
    <%- include('./partials/rodape.ejs') %>

    <!--***************** modal portfolio *************** -->
    <%- include('./partials/modal.ejs') %>

    <!-- ==================================================================== -->

    <script src="js/main.min.js" defer></script>

    <!-- lazyload para carregamento de imagens -->
    <script src="https://cdn.jsdelivr.net/npm/lazyload@2.0.0-rc.2/lazyload.js"></script>

    <script>
      lazyload();

      window.onload = () => {
        $('#data-ano-atual').text(new Date().getFullYear());
      };
    </script>
  </body>
</html>
